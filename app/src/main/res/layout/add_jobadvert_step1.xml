<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:minHeight="250dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:contentPadding="8dp">


                    <EditText
                        android:id="@+id/jobDescprictiontext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:gravity="start"
                        android:hint="İşinizin tanımını ve Aradığınız adayın nitelikleri hakkında bilgiler verebilirsiniz  "
                        android:isScrollContainer="true"
                        android:minHeight="200dp"
                        android:overScrollMode="ifContentScrolls"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textColor="@color/Tomato"
                        android:textColorHint="@color/mycolor"
                        android:textSize="15sp"
                        android:theme="@style/MyEditText" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:contentPadding="8dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/sektorText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:hint="Örn: Yazılım,Bankacılık,Hizmet,Temizlik.."
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:textColor="@color/Tomato"
                            android:textColorHint="@color/mycolor"
                            android:textSize="15sp"
                            android:theme="@style/MyEditText" />

                        <ImageView
                            android:id="@+id/sektorImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/sektorText"
                            android:layout_alignEnd="@+id/sektorText"
                            android:layout_alignTop="@+id/sektorText"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/sort_button_with_three_lines"


                            />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:contentPadding="8dp">


                    <EditText
                        android:id="@+id/arananMeslekText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Örn: Bilgisayar Mühendisi,Güvenlik Görevlisi"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textColor="@color/Tomato"
                        android:textColorHint="@color/mycolor"
                        android:textSize="15sp"
                        android:theme="@style/MyEditText" />


                </android.support.v7.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/jobDescprictiontv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_back"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="İş Tanımı"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_anchor="@+id/card2"
                app:layout_anchorGravity="top|center"


                />

            <TextView
                android:id="@+id/arananMeslek"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_back"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Aranan Meslek"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_anchor="@+id/card3"
                app:layout_anchorGravity="top|center"

                />

            <TextView
                android:id="@+id/sektor"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_back"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Sektör Bilgisi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_anchor="@+id/card1"
                app:layout_anchorGravity="top|center"

                />

        </android.support.design.widget.CoordinatorLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
