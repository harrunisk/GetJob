<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eklenecekDeneyimList"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:background="@drawable/roundedbutton2"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/ayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="2ay"
        android:textColor="@color/Peru"
        android:textSize="15dp">

    </TextView>

    <View
        android:id="@+id/view"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ayText"
        android:background="@drawable/line"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPozisyon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Android Developer"
                android:textAlignment="center"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/pencil"

                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvKurum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/view"
                android:layout_weight="0.7"
                android:text="OptiiM"
                android:textSize="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:background="@drawable/sort">

            </View>

            <TextView
                android:id="@+id/tvLokasyon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.7"
                android:text="Ä°stanbul"
                android:textAlignment="viewEnd"
                android:textSize="13dp"
                android:textStyle="italic" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

