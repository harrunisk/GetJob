<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/picture"
                app:collapsedTitleGravity="center_vertical"
                app:collapsedTitleTextAppearance="@style/personal_collapsed_title"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="PROFİLİM"
                app:titleEnabled="true">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:elevation="4dp"
                    android:fitsSystemWindows="true"
                    app:expandedTitleGravity="top|center_vertical"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/TransparanToolbar">

                </android.support.v7.widget.Toolbar>

                <RelativeLayout
                    android:id="@+id/vUserProfileRoot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:weightSum="1"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="1.5">


                    <View
                        android:id="@+id/backgroundView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#50232121" />


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/userProfile"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="43dp"
                        android:src="@drawable/man"
                        app:civ_border_color="@color/TransparentWhite"
                        app:civ_border_width="9dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="43dp"
                        android:layout_alignBaseline="@id/userProfile"
                        android:orientation="horizontal"
                        android:id="@+id/relativeLayout">

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userProfile"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fullnameuser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Mehmet Demir"
                            android:textColor="#ffffff"
                            android:textSize="24sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/userJob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:text="Bilgisayar Mühendisi"
                            android:textColor="#bbbbbb"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:padding="4dp"
                            android:text="İstanbul"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/userProfile"
                        android:layout_toEndOf="@+id/userProfile"
                        android:id="@+id/profilRate"
                        android:text="% 75"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profilRate"
                        android:layout_alignStart="@id/profilRate"
                        android:textAlignment="center"
                        android:id="@+id/profilActive"
                        android:textColor="@color/white"
                        android:text="Active"

                        />
                    <View
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:layout_alignStart="@id/profilRate"
                        android:layout_marginTop="2dp"
                        android:layout_below="@id/profilActive">


                    </View>

                </RelativeLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include layout="@layout/profile_content">

        </include>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_fab"
            app:elevation="6dp"
            app:fabSize="mini"
            android:id="@+id/editProfileFab"
            android:onClick="editProfile"
           app:backgroundTint="@color/DarkSlateBlue"
            app:layout_anchor="@id/appBarLayout"
            android:src="@drawable/edit_profi"
            app:layout_anchorGravity="bottom|right|end"
            app:pressedTranslationZ="12dp" />

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/footer_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/white_grey_border_top"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Öz.Grntlnme"
                android:textColor="#bcbaba"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="314"
                android:textColor="#797878"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Başvuru Sayısı"
                android:textColor="#bcbaba"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="125"
                android:textColor="#797878"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mesajlarım"
                android:textColor="#bcbaba"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="125"
                android:textColor="#797878"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>