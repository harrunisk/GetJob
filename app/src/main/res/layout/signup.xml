<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/zoologo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/zoologo"/>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"

              >

              <custom_font.MyTextView
                  android:id="@+id/signin1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:gravity="end"
                  android:text="Giriş Yap"
                  android:textColor="#2C3646"
                  android:textSize="16dp" />
              <LinearLayout
                  android:layout_width="39dp"
                  android:layout_height="1.5dp"
                  android:background="#2C3646"
                  android:layout_gravity="end"
                  android:layout_marginTop="2dp"

                  />

          </LinearLayout>
        </LinearLayout>


        <custom_font.MyTextView
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Yeni hesap oluştur"
            android:textColor="#00051f"
            android:textSize="17dp"

            />


        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:background="#00000000"
            android:hint="KULLANICI ADI"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:textSize="13dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"

            />


        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#00000000"
            android:hint="EMAIL ADRESİ"
            android:inputType="text"
            android:textColorHint="#a9b0c3"
            android:textSize="13dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"
            />

        <custom_font.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#00000000"
            android:hint="ŞİFRE"
            android:inputType="textPassword"
            android:textColorHint="#a9b0c3"
            android:textSize="13dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"
            />


        <custom_font.MyTextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:background="@drawable/round"
            android:gravity="center"
            android:padding="14dp"
            android:text="Kaydol"
            android:textColor="#CBD1DC"
            android:textStyle="bold" />

        <custom_font.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ya da giriş yap:"
            android:textColor="#2C3646" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/ter"
        android:gravity="center"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/facebook1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/google1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/google" />

        <ImageView
            android:id="@+id/phone1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/phone_updated" />

    </LinearLayout>


    <custom_font.MyTextView
        android:id="@+id/ter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Kaydolarak şartlarımızı ve koşullarımızı kabul ediyorsunuz."
        android:textColor="#a9b0c3"
        android:textSize="12dp" />



</RelativeLayout>
