<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/tvSsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tag_back"
            android:drawableLeft="@drawable/ic_done_all_black_10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="SSK"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/tvPrim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tag_back"
            android:drawableLeft="@drawable/ic_done_all_black_10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="PRİM"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tvYemek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tag_back"
            android:drawableLeft="@drawable/ic_done_all_black_10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="YEMEK"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tvYol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tag_back"
            android:drawableLeft="@drawable/ic_done_all_black_10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="YOL "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/tvAgi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tag_back"
            android:drawableLeft="@drawable/ic_done_all_black_10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="AGİ"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tvServis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tag_back"
            android:drawableLeft="@drawable/ic_done_all_black_10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="SERVİS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tvMaas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tag_back"
            android:drawableLeft="@drawable/ic_done_all_black_10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="MAAŞ "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tvKonaklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tag_back"
            android:drawableLeft="@drawable/ic_done_all_black_10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="KONAKLAMA"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"

            />


    </LinearLayout>


</LinearLayout>