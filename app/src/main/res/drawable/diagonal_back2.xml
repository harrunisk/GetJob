<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/pic03"/>
    <item>
        <bitmap android:src="@drawable/pic03" android:gravity="center" android:alpha="0.1"/>
    </item>

    <item android:top="200dp"
        android:bottom="-0dp"
        android:left="-100dp"
        android:right="0dp">
        <rotate
            android:fromDegrees="10"
            android:pivotX="0%"
            android:pivotY="200%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="?android:colorBackground"/>
            </shape>
        </rotate>
    </item>
</layer-list>