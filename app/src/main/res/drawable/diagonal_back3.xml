<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/transparent"> </item>
    <item
        android:bottom="0dp"
        android:left="-200dp"
        android:right="0dp"
        android:top="-40dp"
        >
