<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DarkSlateGray</item>
        <item name="colorPrimaryDark">@color/SeaGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="StepperLayoutTheme" parent="MSDefaultStepperLayoutTheme"></style>

    <style name="DialogSlideAnimation">

        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/DarkSlateGray2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/SkyBlue</item>
        <item name="colorControlActivated">@color/Tomato</item>
    </style>

    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/DarkGray</item>
        <item name="colorControlActivated">@color/SlateBlue</item>

    </style>

    <style name="personal_collapsed_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="personal_expanded_title">
        <item name="android:textSize">0sp</item>
        <item name="android:text"></item>
        <item name="android:textColor">@color/Brown</item>
    </style>


    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/wallet_bright_foreground_disabled_holo_light</item>

    </style>

    <style name="TransparanToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">


        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

    </style>

    <style name="My_AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/DarkSlateGray</item>
    </style>


    <style name="spinner_style">
        <item name="android:background">@drawable/spinnerstyle</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>


    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>


    <!-- BOTTOM SHEET TOOLBAR STYLE -->

    <style name="MainTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
    </style>

    <style name="MainTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/tw__solid_white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="BottomSheetAppBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:theme">@style/Theme.AppCompat.Light</item>
    </style>


    <style name="MainAppBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="BottomSheetToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="BottomSheetTabLayoutStyle" parent="MainTabLayoutStyle">
        <item name="tabIndicatorColor">@color/purple</item>
        <item name="tabSelectedTextColor">@color/purple</item>
    </style>

    <style name="myButonStyle">
        <!-- Texts color -->
        <item name="disabledTextColor">@color/black</item>
        <item name="enabledTextColor">@color/white_100</item>
        <item name="loadingTextColor">@color/black_038</item>
        <item name="successTextColor">@color/white_100</item>
        <item name="failedTextColor">@color/white_100</item>
        <!-- Icons color -->
        <item name="disabledIconColor">@color/black</item>
        <item name="enabledIconColor">@color/white_100</item>
        <item name="loadingIconColor">@color/black_038</item>
        <item name="successIconColor">@color/white_100</item>
        <item name="failedIconColor">@color/white_100</item>
    </style>

    <style name="StateButton_md_blueStyle" parent="myButonStyle">
        <!-- Backgrounds -->
        <item name="disabledBackground">@drawable/round</item>
        <item name="enabledBackground">@drawable/toolbar</item>
        <item name="loadingBackground">@drawable/statebutton_md_bluebg_loading</item>
        <item name="successBackground">@drawable/statebutton_md_bluebg_success</item>
        <item name="failedBackground">@drawable/statebutton_md_bluebg_failed</item>
    </style>

    <style name="LoginStateButtonStyle">
        <!-- Backgrounds -->
        <item name="disabledBackground">@drawable/round</item>
        <item name="enabledBackground">@drawable/rect_back</item>
        <item name="loadingBackground">@drawable/purpleback</item>
        <item name="successBackground">@drawable/yellowback</item>
        <item name="failedBackground">@drawable/rect_back</item>

        <!--Texts Color-->
        <item name="disabledTextColor">@color/black</item>
        <item name="enabledTextColor">@color/white</item>
        <item name="loadingTextColor">@color/white_100</item>
        <item name="successTextColor">@color/white_100</item>
        <item name="failedTextColor">@color/white_100</item>
        <!-- Icons color -->

        <item name="disabledIcon">@drawable/ic_done_all_black_10dp</item>
        <item name="successIcon">@drawable/ic_done_all_black_10dp</item>

        <item name="disabledIconColor">@color/black</item>
        <item name="enabledIconColor">@color/white</item>
        <item name="loadingIconColor">@color/white</item>
        <item name="successIconColor">@color/white_100</item>
        <item name="failedIconColor">@color/white_100</item>


    </style>


    <style name="CustomDialog" parent="AppTheme2">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MyDialogTheme" parent="android:Theme.Holo.Light">
        <!-- Fill the screen -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:background">#ff0000</item>
    </style>


    <style name="mySwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/SeaGreen</item>

        <!-- inActive -->
        <item name="colorSwitchThumbNormal">@color/retro</item>

        <!-- Active -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>
